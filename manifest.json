{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Mux AI Distionary",
    "description": "This is a Chrome extension for learn English everywhere",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "96": "icon96.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "Mux AI Distionary"
    },
    "permissions": [
        "contextMenus",
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "*.png"
            ],
            "matches": [
                "https://*/*"
            ]
        }
    ]
}